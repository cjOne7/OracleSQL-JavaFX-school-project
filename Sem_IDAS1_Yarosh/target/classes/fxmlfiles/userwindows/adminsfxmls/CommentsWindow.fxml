<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="626.0" prefWidth="850.0" style="-fx-background-color: #80ffff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.userwindows.adminscontrollers.discussionblock.CommentsController">
   <children>
      <TextArea fx:id="commentTextArea" layoutX="45.0" layoutY="488.0" prefHeight="126.0" prefWidth="655.0" promptText="Write your comment here..." wrapText="true" />
      <Button layoutX="715.0" layoutY="488.0" mnemonicParsing="false" onAction="#sentComment" prefWidth="90.0" style="-fx-background-color: #f5f5dc; -fx-border-color: #50c878;" text="send">
         <font>
            <Font name="Castellar" size="14.0" />
         </font>
      </Button>
      <Button fx:id="closeBtn" layoutX="745.0" layoutY="583.0" mnemonicParsing="false" onAction="#close" prefWidth="90.0" style="-fx-background-color: #f5f5dc; -fx-border-color: #50c878;" text="close">
         <font>
            <Font name="Castellar" size="14.0" />
         </font>
      </Button>
      <ListView fx:id="commentsListView" layoutX="45.0" layoutY="23.0" onKeyPressed="#keyPressed" onKeyReleased="#keyReleased" onMouseClicked="#mouseClicked" prefHeight="452.0" prefWidth="758.0" />
      <Button fx:id="deleteCommentBtn" disable="true" layoutX="715.0" layoutY="527.0" mnemonicParsing="false" onAction="#deleteComment" prefWidth="90.0" style="-fx-background-color: #f5f5dc; -fx-border-color: #50c878;" text="delete">
         <font>
            <Font name="Castellar" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
